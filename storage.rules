rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Generated content (images/videos) - public read access
    match /generations/{allPaths=**} {
      allow read: if true;  // Public read for sharing generated content
      allow write: if false;  // Only Cloud Functions can write
    }
    
    // Product images - public read access
    match /products/{allPaths=**} {
      allow read: if true;  // Public read for product images
      allow write: if request.auth != null;  // Authenticated users can upload products
    }
    
    // Everything else - deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
