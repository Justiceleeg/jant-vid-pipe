rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Project collection rules
    // TEMPORARY DEV RULES - Allow all reads/writes
    // TODO: Fix this properly - frontend should NOT query Firestore directly
    // Frontend should only use backend API which validates Clerk tokens
    match /projects/{projectId} {
      // DEV ONLY: Allow all authenticated users (any auth system)
      // This allows Clerk-authenticated users to read/write
      allow read, write, create, delete: if true;
      
      // PRODUCTION RULES (commented out until we fix the auth flow):
      // allow read, write: if request.auth != null &&
      //   request.auth.uid == resource.data.user_id;
      // allow create: if request.auth != null &&
      //   request.auth.uid == request.resource.data.user_id;
      // allow delete: if request.auth != null &&
      //   request.auth.uid == resource.data.user_id;
    }

    // Legacy rules for old collections (can be removed after migration)
    // These will remain temporarily to support any existing data
    match /storyboards/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /scenes/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Job tracking rules (if using separate job collection)
    // Jobs can be read/written by authenticated users
    match /jobs/{jobId} {
      allow read: if request.auth != null &&
        request.auth.uid == resource.data.user_id;

      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.user_id;

      // Only allow updates from cloud functions or the owning user
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.user_id ||
         request.auth.token.admin == true);
    }
  }
}